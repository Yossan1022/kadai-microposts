<% if current_user.like?(post) %>
    <%= form_with(model: current_user.favorites.find_by(micropost_id: post.id), method: :delete) do |f| %>
    <!-- <input type="hidden" name="micropost_id" value="投稿の id"> を生成します。-->
      <%= hidden_field_tag :micropost_id ,post.id %>
      <%= f.submit 'お気に入り解除', class: 'btn btn-warning w-10' %>
    <% end %>
  <% else %>
     <%= form_with(model: current_user.favorites.build) do |f| %>
      <%= hidden_field_tag :micropost_id,post.id %>
      <%= f.submit 'お気に入り追加',class: 'btn btn-secondary w-10' %>
    <% end %>
  <% end %>