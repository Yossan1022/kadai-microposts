 
 <% if current_user.like?(micropost) %>
    <%= form_with(model: current_user.favorites.find_by(micropost_id: micropost.id), method: :post) do |f| %>
    <!-- <input type="hidden" name="micropost_id" value="投稿の id"> を生成します。-->
      <%= hidden_field_tag :micropost_id,micropost.id %>
      <%= f.submit 'Likes', class: 'btn btn-danger w-10' %>
      
    <% end %>
  <% else %>
     <%= form_with(model: current_user.favorites.build) do |f| %>
      
      <%= hidden_field_tag :micropost_id,micropost.id %>
      <%= f.submit 'Unlikes', class: 'btn btn-primary w-10' %>
      
    <% end %>
  <% end %>
  
  